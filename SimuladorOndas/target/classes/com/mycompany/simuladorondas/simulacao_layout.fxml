<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.simuladorondas.Controller.SimulacaoController">
            

    <top>
        <!-- LineChart ocupando a parte superior -->
        <LineChart fx:id="graficoLinha" animated="false" createSymbols="false" styleClass="custom-chart" prefHeight="500.0">
                
            <xAxis>
                <NumberAxis fx:id="eixoX" lowerBound="0" upperBound="1.01" tickUnit="0.1" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="eixoY" lowerBound="-1.5" upperBound="1.5" tickUnit="0.5" />
            </yAxis>
        </LineChart>
    </top>

    <bottom>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <!-- Campos de Entrada -->
            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Frequência (Hz, 0 &lt; f &lt; 0.5):" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="campoFrequencia" prefWidth="150" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Comprimento de Onda (m, 0.2 &lt; λ &lt; 2.0):" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="campoComprimentoOnda" prefWidth="150" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Tempo de Simulação (s, 1 &lt; t &lt; 10):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="campoTempoSimulacao" prefWidth="150" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Erro Máximo (&gt; 0):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="campoErroMaximo" prefWidth="150" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Posição do Ponto P (0 &lt;= x &lt;= 1):" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="campoPontoP" prefWidth="150" GridPane.rowIndex="4" GridPane.columnIndex="1" />
            </GridPane>

            <!-- Botões -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="botaoMostrarHistorico" text="Mostrar Histórico" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button fx:id="botaoIniciar" text="Iniciar Simulação" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>





